#!/bin/sh
# Define the required commit message format
FORMAT="^JIRA-[0-9]+: .+"
# Read the commit message from the file
COMMIT_MSG_FILE=$1
COMMIT_MSG=$(cat $COMMIT_MSG_FILE)
# Check if the commit message matches the required format
if ! echo "$COMMIT_MSG" | grep -qE "$FORMAT"; then
  echo "Error: Commit message format is incorrect."
  echo "Format should be: JIRA-123: Description of the change"
  exit 1
fi
